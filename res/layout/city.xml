<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/cityName" android:textSize="45dp"
                android:textColor="@android:color/holo_blue_dark" android:text="Somewhere" android:layout_weight="1"
                android:singleLine="true"/>
        <TextView
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:id="@+id/temperatureLabel" android:textSize="50dp" android:textColor="@android:color/white"
                android:gravity="center_horizontal|right"/>
    </LinearLayout>
</LinearLayout>